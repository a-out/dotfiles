{
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.fontFamily": "Iosevka Curly Slab",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "phoenix-heex": "html"
  },
  "explorer.confirmDelete": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.advanced.externalDiffTool": "smerge",
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html",
    "phoenix-heex": "html"
  },
  "tailwindCSS.validate": true,
  "terminal.integrated.fontSize": 15,
  "vim.disableExtension": false,
  "vim.leader": "<space>",
  "workbench.colorTheme": "Tiniri Light",
  "workbench.settings.editor": "json",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.terminal.launchArgs": [
    "-m",
    "IPython",
    "--no-autoindent"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "editor.codeLens": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "files.associations": {
    "*.jbuilder": "ruby",
    "*.heex": "phoenix-heex"
  },
  "extensions.ignoreRecommendations": true,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.wordWrap": "off",
  "editor.guides.bracketPairs": true,
  "python.defaultInterpreterPath": "/Users/richard/.asdf/shims/python3.9",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "whichkey.show"
      ]
    },
    {
      "before": [
        "]",
        "h"
      ],
      "commands": [
        "workbench.action.editor.nextChange"
      ]
    },
    {
      "before": [
        "[",
        "h"
      ],
      "commands": [
        "workbench.action.editor.previousChange"
      ]
    },
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
    {
      "before": [
        "g",
        "p"
      ],
      "commands": [
        "editor.action.peekDefinition"
      ]
    },
  ],
  "whichkey.delay": 300,
  "whichkey.bindingOverrides": [
    {
      "keys": " ",
      "name": "Files",
      "type": "command",
      "command": "workbench.action.quickOpen"
    },
    {
      "keys": [
        "r"
      ],
      "name": "+REPL",
      "type": "bindings",
      "bindings": [
        {
          "key": "<enter>",
          "name": "Send selection to repl",
          "type": "command",
          "command": "workbench.action.terminal.runSelectedText"
        },
        {
          "key": "r",
          "name": "Send selection to repl",
          "type": "command",
          "command": "workbench.action.terminal.runSelectedText"
        },
        {
          "key": "f",
          "name": "Send file to repl",
          "type": "command",
          "command": "workbench.action.terminal.runActiveFile"
        }
      ]
    },
    {
      "keys": ":",
      "name": "Commands",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "keys": "h",
      "name": "Show hover",
      "type": "command",
      "command": "editor.action.showHover"
    },
    {
      "keys": "w..",
      "name": "Split window down",
      "type": "command",
      "command": "workbench.action.splitEditorDown"
    },
    {
      "keys": "w.,",
      "name": "Split window right",
      "type": "command",
      "command": "workbench.action.splitEditorRight"
    },
    {
      "keys": "f.f",
      "name": "Format",
      "type": "command",
      "command": "editor.action.formatDocument"
    },
    {
      "keys": "g",
      "name": "+Git",
      "type": "bindings",
      "bindings": [
        {
          "key": "b",
          "name": "Blame",
          "type": "command",
          "command": "gitlens.toggleFileBlame"
        },
        {
          "key": "n",
          "name": "Next change",
          "type": "command",
          "command": "workbench.action.editor.nextChange"
        },
        {
          "key": "p",
          "name": "Previous change",
          "type": "command",
          "command": "workbench.action.editor.previousChange"
        },
        {
          "key": "D",
          "name": "Discard file",
          "type": "command",
          "command": "git.clean"
        },
        {
          "key": "d",
          "name": "Discard hunk",
          "type": "command",
          "command": "git.revertSelectedRanges"
        },
        {
          "key": "g",
          "name": "Magit status",
          "type": "command",
          "command": "magit.status"
        },
      ]
    }
  ],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.bracketPairColorization.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.autofetch": true,
  "githubPullRequests.pullBranch": "never",
  "git.mergeEditor": false,
  "terminal.integrated.scrollback": 10000,
  "[phoenix-heex]": {
    "editor.defaultFormatter": "RoyalMist.vscode-eex-format"
  },
  "[html-eex]": {
    "editor.defaultFormatter": "RoyalMist.vscode-eex-format"
  },
  "workbench.editor.empty.hint": "hidden",
  "elixirLS.suggestSpecs": false,
  "redhat.telemetry.enabled": false,
  "gitlens.launchpad.indicator.enabled": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
