[keys]
   # reload config
   [key] mod = {"Alt", "Control"} key = "r" func = "reload" [/key]

   # terminal
   [key] mod = {"Shift", "Alt"} key = "Return" func = "spawn" cmd = "urxvt" [/key]

   # kill client
   [key] mod = {"Shift", "Alt"} key = "c" func = "client_kill" [/key]

   # quit wmfs
   [key] mod = {"Control", "Alt"} key = "q" func = "quit" [/key]

   # swap with next client
   [key] mod = {"Alt"} key = "t" func = "client_swap_next" [/key]

   # swap with previous client
   [key] mod = {"Alt", "Shift"} key = "t" func = "client_swap_prev" [/key]

   # set master client
   [key] mod = {"Control"} key = "m" func = "client_set_master" [/key]

   # toggle maximum
   [key] mod = {"Shift", "Alt"} key = "m" func = "toggle_max" [/key]

   # toggle free
   [key] mod = {"Shift", "Alt"} key = "f" func = "toggle_free" [/key]

   # toggle infobar position
   [key] mod = {"Alt"} key = "b" func = "toggle_infobar_position" [/key]
   [key] mod = {"Alt", "Shift"} key = "b" func = "toggle_infobar_display" [/key]

   # toggle resizehint
   [key] mod = {"Shift", "Control"} key = "r" func = "toggle_resizehint" [/key]

   # Toggle the tag_autohide mode
   [key] mod = {"Shift", "Control"} key = "t" func = "toggle_tagautohide" [/key]

   # next client
   [key] mod = {"Alt"} key = "Tab" func = "client_next" [/key]
   [key] mod = {"Alt"} key = "j" func = "client_next" [/key]
   # previous client
   [key] mod = {"Alt"} key = "section" func = "client_prev" [/key]
   [key] mod = {"Alt"} key = "k" func = "client_prev" [/key]

   # next layout
   [key] mod = {"Alt"} key = "space" func = "layout_next" [/key]

   # previous layout
   [key] mod = {"Alt", "Shift"} key = "space" func = "layout_prev" [/key]

   # increase mwfact
   [key] mod = {"Alt"} key = "l" func = "set_mwfact" cmd = "+0.025" [/key]

   # decrease mwfact
   [key] mod = {"Alt"} key = "h" func = "set_mwfact" cmd = "-0.025" [/key]

   # dmenu
   [key] mod = {"Alt"} key = "p" func = "spawn" cmd = "/home/richie/.scripts/dmenu_bind.sh" [/key]

   # volume up / down
   [key] mod = {"Control", "Alt"} key = "Up" func = "spawn" cmd = "amixer set Master 1+" [/key]
   [key] mod = {"Control", "Alt"} key = "Down" func = "spawn" cmd = "amixer set Master 1-" [/key]


   # select tag n
   [key] mod = {"Alt"} key = "1" func = "tag" cmd = "1" [/key]
   [key] mod = {"Alt"} key = "2" func = "tag" cmd = "2" [/key]
   [key] mod = {"Alt"} key = "3" func = "tag" cmd = "3" [/key]
   [key] mod = {"Alt"} key = "4" func = "tag" cmd = "4" [/key]
   [key] mod = {"Alt"} key = "5" func = "tag" cmd = "5" [/key]
   [key] mod = {"Alt"} key = "6" func = "tag" cmd = "6" [/key]
   [key] mod = {"Alt"} key = "7" func = "tag" cmd = "7" [/key]
   [key] mod = {"Alt"} key = "8" func = "tag" cmd = "8" [/key]
   [key] mod = {"Alt"} key = "9" func = "tag" cmd = "9" [/key]

   # move client to tag n
   [key] mod = {"Shift", "Alt"} key = "1" func = "tag_transfert" cmd ="1" [/key]
   [key] mod = {"Shift", "Alt"} key = "2" func = "tag_transfert" cmd ="2" [/key]
   [key] mod = {"Shift", "Alt"} key = "3" func = "tag_transfert" cmd ="3" [/key]
   [key] mod = {"Shift", "Alt"} key = "4" func = "tag_transfert" cmd ="4" [/key]
   [key] mod = {"Shift", "Alt"} key = "5" func = "tag_transfert" cmd ="5" [/key]
   [key] mod = {"Shift", "Alt"} key = "6" func = "tag_transfert" cmd ="6" [/key]
   [key] mod = {"Shift", "Alt"} key = "7" func = "tag_transfert" cmd ="7" [/key]
   [key] mod = {"Shift", "Alt"} key = "8" func = "tag_transfert" cmd ="8" [/key]
   [key] mod = {"Shift", "Alt"} key = "9" func = "tag_transfert" cmd ="9" [/key]

   # toggle additional tags on client
   [key] mod = {"Alt", "Super"} key = "F1" func = "tag_toggle_additional" cmd ="1" [/key]
   [key] mod = {"Alt", "Super"} key = "F2" func = "tag_toggle_additional" cmd ="2" [/key]
   [key] mod = {"Alt", "Super"} key = "F3" func = "tag_toggle_additional" cmd ="3" [/key]
   [key] mod = {"Alt", "Super"} key = "F4" func = "tag_toggle_additional" cmd ="4" [/key]
   [key] mod = {"Alt", "Super"} key = "F5" func = "tag_toggle_additional" cmd ="5" [/key]
   [key] mod = {"Alt", "Super"} key = "F6" func = "tag_toggle_additional" cmd ="6" [/key]
   [key] mod = {"Alt", "Super"} key = "F7" func = "tag_toggle_additional" cmd ="7" [/key]
   [key] mod = {"Alt", "Super"} key = "F8" func = "tag_toggle_additional" cmd ="8" [/key]
   [key] mod = {"Alt", "Super"} key = "F9" func = "tag_toggle_additional" cmd ="9" [/key]

   # change screen
   [key] mod = {"Super"} key = "Tab" func = "screen_next" [/key]
   [key] mod = {"Super", "Shift"} key = "Tab" func = "screen_prev" [/key]

   # swap client in the next/prev screen
   [key] mod = {"Super", "Shift"} key = "a" func = "client_screen_next" [/key]
   [key] mod = {"Super", "Shift"} key = "z" func = "client_screen_prev" [/key]

   [key] mod = {"Alt"} key = "e" func = "toggle_tag_expose" [/key]

   # application shortcuts
   [key] mod = {"Shift", "Alt"} key = "w" func = "spawn" cmd = "firefox" [/key]

[/keys]


